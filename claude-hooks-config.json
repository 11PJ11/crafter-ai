{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -Command \"$input = $input | Out-String; $json = $input | ConvertFrom-Json; $filePath = $json.tool_input.file_path; if ($filePath) { & 'C:/Repositories/Projects/ai-craft/hooks/lint-format.bat' $filePath }\"",
            "description": "Auto-lint and format source files based on language (Windows)"
          }
        ]
      }
    ]
  }
}